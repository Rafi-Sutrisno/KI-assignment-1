generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  phone_number String
  address      String
  password     String

  user_files   UserFiles[]
}

model UserFiles {
  id            String @id @default(cuid())
  userId        String
  fileType      String
  fileName      String
  aes_encrypted Bytes
  aes_iv        Bytes
  rc4_encrypted Bytes
  des_encrypted Bytes
  
  user          User   @relation(fields: [userId], references: [id])
}
